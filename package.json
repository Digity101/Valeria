{
  "name": "valeria",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all -p ts sass serve",
    "ts": "tsc-bundle ./tsconfig.json --watch",
    "sass": "sass --watch ./scss/valeria.sass bin/css/valeria.css",
    "serve": "npx serve ./bin",
    "build": "tsc-bundle ./tsconfig.json && sass ./scss/valeria.sass bin/css/valeria.css && ncp ./bin ./dist"
  },
  "dependencies": {
    "sass": "^1.26.5",
    "typescript": "^3.8.3",
    "typescript-bundle": "^1.0.16"
  },
  "devDependencies": {
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5"
  }
}
