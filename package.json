{
  "name": "valeria",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all -p ts sass serve",
    "ts": "tsc-bundle ./tsconfig.json --watch",
    "sass": "sass --watch ./scss/valeria.sass bin/css/valeria.css",
    "serve-dev": "npx serve ./bin",
    "serve-dist": "npx serve ./dist",
    "build": "tsc-bundle ./tsconfig.json && sass ./scss/valeria.sass bin/css/valeria.css && del-cli ./dist && ncp ./bin ./dist",
    "gh-pages": "git subtree push --prefix dist origin gh-pages",
    "build-and-deploy-gh-pages": "npm-run-all build gh-pages"
  },
  "dependencies": {
    "sass": "^1.26.5",
    "typescript": "^3.8.3",
    "typescript-bundle": "^1.0.16"
  },
  "devDependencies": {
    "del-cli": "^3.0.0",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5"
  }
}
