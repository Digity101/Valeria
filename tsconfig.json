{
  "compilerOptions": {
    "allowJs": true,
    "module": "es6",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": [
      "DOM",
      "ES6",
      "es2017",
      "DOM.Iterable",
      "ScriptHost",
      "ES2018.Promise",
      "ES2018.RegExp",
      "ES2015.Iterable",
      "ES2019",
      "ESNext.Array"
    ],
    "outDir": "bin/",
    "pretty": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "target": "ES2019",
    "typeRoots": ["./typings", "./node_modules/@types"],
    "types": ["node", "jest"],
    "esModuleInterop": true
  },
  "include": [
    "src/*.ts",
    "tests/*.test.ts"
],
  "exclude": [
    "*.spec.ts",
]
}
